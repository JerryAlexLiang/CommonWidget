    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.customprogressdiaolg.MainActivity">

    <Button
        android:id="@+id/dialog_one_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义ProgressDialogOne"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/dialog_two_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义ProgressDialogTwo"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/dialog_three_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义ProgressDialogThree"
        android:textAllCaps="false" />

</LinearLayout>
